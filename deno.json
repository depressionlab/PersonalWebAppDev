{
	"tasks": {
		"dev": "deno run --no-clear-screen --watch main.ts",
		"serve": "deno run -A --no-clear-screen --check --watch ./server/main.ts"
	},
	"imports": {
		"oak": "jsr:@oak/oak",
		"oak/commons": "jsr:@oak/commons",
		"@std/fmt": "jsr:@std/fmt",
		"@std/datetime": "jsr:@std/datetime",
		"@db/sqlite": "jsr:@db/sqlite"
	},
	"fmt": {
		"useTabs": true,
		"singleQuote": true,
		"semiColons": true,
		"lineWidth": 300
	}
}
